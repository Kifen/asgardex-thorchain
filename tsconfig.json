{
  "compilerOptions": {
    "outDir": "build",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "declaration": true,
    "module": "commonjs",
    "sourceMap": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "server.js"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
